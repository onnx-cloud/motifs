motif:Transformer a motif:UseCase, skos:Concept ;
  skos:inScheme motif:UseCaseScheme ;
  skos:prefLabel "Transformer Architecture"@en ;
  skos:definition "Self-attention based architecture for sequence-to-sequence modeling with parallel processing of input tokens."@en ;
  motif:hasDomain motif:NLP ;
  motif:primaryMotif motif:Attention ;
  motif:usesMotif motif:Attention ;
  motif:usesMotif motif:motif_MultiHead ;
  motif:usesMotif motif:motif_QKV ;
  motif:usesMotif motif:Residual ;
