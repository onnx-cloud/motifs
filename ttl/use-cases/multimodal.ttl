##################################
# Multimodal Learning Use Cases
# Links cross-modal patterns to computation graph motifs
##################################

motif:CrossAttention a motif:UseCase, skos:Concept ;
  skos:inScheme motif:UseCaseScheme ;
  skos:prefLabel "Cross-Modal Attention"@en ;
  skos:definition "Attention mechanism where queries from one modality attend to keys/values from another modality."@en ;
  motif:hasDomain motif:Multimodal ;
  motif:primaryMotif motif:Attention ;
  motif:usesMotif motif:Attention ;
  motif:usesMotif motif:motif_QKV ;
  motif:usesMotif motif:Concat ;
  motif:usesMotif motif:Linear .

