# Category summary: all categories with counts and descriptions
PREFIX motif: <https://ns.onnx.cloud/motif#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>

SELECT ?category ?label ?definition (COUNT(DISTINCT ?motif) AS ?count)
WHERE {
  ?category a skos:Concept ;
    skos:inScheme motif:CategoryScheme ;
    skos:prefLabel ?label .
  OPTIONAL { ?category skos:definition ?definition . }
  OPTIONAL { ?motif a motif:Motif ; motif:hasCategory ?category . }
}
GROUP BY ?category ?label ?definition
ORDER BY DESC(?count)
