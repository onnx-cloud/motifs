{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Use Cases per Domain",
  "description": "Number of technical use cases in each application domain (from use-cases TTL)",
  "data": {
    "values": []
  },
  "width": 600,
  "height": 350,
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "domain",
      "type": "nominal",
      "axis": {
        "labelAngle": -45,
        "title": "Domain"
      }
    },
    "y": {
      "field": "count",
      "type": "quantitative",
      "axis": {
        "title": "Number of Use Cases"
      }
    },
    "color": {
      "field": "domain",
      "type": "nominal",
      "scale": {
        "scheme": "category10"
      },
      "legend": false
    },
    "tooltip": [
      {
        "field": "domain",
        "type": "nominal"
      },
      {
        "field": "count",
        "type": "quantitative"
      }
    ]
  }
}